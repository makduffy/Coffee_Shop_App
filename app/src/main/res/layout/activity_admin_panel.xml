<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.admin.AdminPanel">

    <TextView
        android:id="@+id/textViewAPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="21dp"
        android:text="Admin Panel"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogOut" />

    <TextView
        android:id="@+id/textViewADSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="13dp"
        android:text="Dashboard and Navigation for Admins"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAPanel" />

    <Button
        android:id="@+id/buttonMenuM"
        android:layout_width="305dp"
        android:layout_height="65dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="61dp"
        android:backgroundTint="#0030FF"
        android:text="Menu Management"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewADSubtext" />

    <Button
        android:id="@+id/buttonOrders"
        android:layout_width="305dp"
        android:layout_height="65dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0030FF"
        android:text="Orders"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMenuM" />

    <Button
        android:id="@+id/buttonFeedback"
        android:layout_width="305dp"
        android:layout_height="65dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0030FF"
        android:text="Feedback"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOrders" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="39dp"
        android:text="Log Out"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>